<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/goods_view"
    android:layout_width="200dp"
    android:layout_height="110dp"
    android:layout_above="@id/bottom_view"
    android:layout_marginBottom="10dp"
    android:orientation="vertical"
    android:background="@color/bg_white"
    app:layout_constraintCircleRadius="@dimen/dp_20"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:text="@string/goods_title"
        android:textColor="@color/navigationBarColor"
        android:gravity="center"/>
    <LinearLayout
        android:id="@+id/goods_content"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_80"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/goods_avatar"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"/>
        <LinearLayout
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_80"
            android:orientation="vertical">
            <TextView
                android:id="@+id/goods_name"
                android:layout_width="@dimen/dp_120"
                android:layout_height="@dimen/dp_30"/>
            <LinearLayout
                android:layout_width="@dimen/dp_120"
                android:layout_height="@dimen/dp_50"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/goods_price"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_50"/>
                <ImageView
                    android:id="@+id/goods_shop"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_50"
                    android:src="@drawable/gouwu"
                    android:gravity="center"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>